<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_buttons_num">
        <item name="android:background">#666</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="calc_buttons_op" parent="calc_buttons_num">
        <item name="android:background">#6666</item>
    </style>

   <style name="calc_buttons_equals" parent="calc_buttons_num">
       <item name="android:background">@color/color_equals</item>
       <item name="android:paddingTop">10dp</item>
       <item name="android:gravity">center</item>
       <item name="android:textSize">20sp</item>
   </style>

    <style name="calc_buttons_del" parent="calc_buttons_num">
        <item name="android:background">@color/black</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>